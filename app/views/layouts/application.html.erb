<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>

    <% if content_for? :title %>
      <title><%= yield :title %></title>
    <% else %>
      <title>勉強会のLiveが見れる | ConnpassTube</title>
    <% end %>
    <% if content_for? :meta_description %>
      <meta name="description" content="<%= yield :meta_description %>">
    <% else %>
      <meta name="description" content="勉強会のLiveが見れるサイトです。ぜひご覧ください。">
    <% end %>
    <meta name="keywords" content="勉強会,Youtbe, ライブ動画<%= yield :meta_keywords if content_for? :meta_keywords %>" />
    <meta property="og:site_name" content="ConnpassTube">
    <% if request.path == root_path %>
      <meta property="og:type" content="website">
    <% else %>
      <meta property="og:type" content="article">
    <% end %>
    <meta property="og:url" content="<%= "#{root_url.chop}#{request.path_info}" %>">
    <% if content_for? :og_title %>
      <meta property="og:title" content="<%= yield :og_title %>">
    <% else %>
      <meta property="og:title" content="勉強会のLiveが見れる | ConnpassTube">
    <% end %>
    <% if content_for? :og_description %>
      <meta property="og:description" content="<%= yield :og_description %>" />
    <% else %>
      <meta property="og:description" content="勉強会のLiveが見れるサイトです。ぜひご覧ください。" />
    <% end %>
    <meta property="og:image" content="<%= "#{root_url}images/ogp.png" %>">
    <!-- Twitter共通設定 -->
    <meta name="twitter:card" content="summary_large_image" />

  </head>

  <body>
    <%= react_component('Header') %>
    <%= yield %>
    <%= react_component('Footer') %>
  </body>
</html>
